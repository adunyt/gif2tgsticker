#:kivy 2.2.0
<StickerFactoryApp>:
     MDGridLayout:
          id: maingrid
          md_bg_color: "#F2F2F2"
          size: root.width, root.height
          cols: 2
          VideoSettingsMenu:
               id: "video_settings_menu"
               size_hint_x: 0.5
          FilesPanel:
               id: files_grid
               size_hint_x: 0.5
               
<VideoSettingsMenu>:
     cols: 1
     md_bg_color: "#CCCCCC"
     MDBoxLayout:
          size_hint_y: 0.1
          MDLabel:
               text: "Video settings"
               valign: "center"    
               halign: "center"
               font_style: "H2"
     MDList:
          id: list
          size_hint_y: 0.7
          TwoLineAvatarIconListItem:
               id: fps_list_item
               text: "FPS"
               secondary_text: "Lower FPS = Smaller size"
               on_size:
                    self.ids._right_container.width = slider.width
                    self.ids._right_container.x = slider.width
               IconLeftWidget:
                    id: icon-widget
                    icon: "video-vintage"
               RightWidgetSlider:
                    id: slider
                    min: 1
                    max: 30
                    value: 30
                    show_off: False

          TwoLineAvatarIconListItem:
               id: resize_list_item
               text: "Resize mode"
               secondary_text: "How video will be cropped"
               on_size:
                    self.ids._right_container.x = checkboxes.width        
                    self.ids._right_container.width = checkboxes.width  
               IconLeftWidget:
                    id: icon-widget
                    icon: "resize"
               RightWidgetBoxLayout:
                    width: "125dp"
                    id: checkboxes
                    orientation: "vertical"
                    MDBoxLayout:
                         MDIcon:
                              icon: "relative-scale" 
                         MDLabel:
                              text: "Scale"
                         MDCheckbox:
                              group: 'group'
                              active: True
                    MDBoxLayout:
                         MDIcon:
                              icon: "content-cut" 
                         MDLabel:
                              text: "Pad"
                         MDCheckbox:
                              group: 'group'

          TwoLineAvatarIconListItem:
               id: smart_adjust_list_item
               text: "Smart speed adjust duration limit (SSADL)"
               secondary_text: "when video is longer than 3 seconds"
               on_size:
                    self.ids._right_container.x = textfield.width
                    self.ids._right_container.width = textfield.width
               IconLeftWidget:
                    id: icon-widget
                    icon: "play-speed"
               RightWidgetTextField:
                    id: textfield
                    text: "2.9" 
                    halign: "center"
                    input_filter: 'float'

          ThreeLineAvatarIconListItem:
               id: smart_adjust_fallback_list_item
               text: "SSADL fallback (PTS modifier)"
               secondary_text: "used when unable to get duration from video"
               tertiary_text: "(0.5 = 2x speed)"
               on_size:
                    self.ids._right_container.x = textfield.width
                    self.ids._right_container.width = textfield.width
               IconLeftWidget:
                    id: icon-widget
                    icon: "play-speed"
               RightWidgetTextField:
                    id: textfield
                    text: "1.0"
                    halign: "center"
                    input_filter: 'float'

          ThreeLineAvatarIconListItem:
               id: crf_list_item
               text: "CRF Value"
               secondary_text: "higher means lower quality"
               tertiary_text: "-1=unset"
               on_size:
                    self.ids._right_container.width = slider.width
                    self.ids._right_container.x = slider.width
               IconLeftWidget:
                    id: icon-widget
                    icon: "quality-high"
               RightWidgetSlider:
                    id: slider
                    min: -1
                    max: 51
                    value: -1

          ThreeLineAvatarIconListItem:
               id: webp_delay_list_item
               text: "WebP to APNG delay"
               secondary_text: "lower means faster playback"
               tertiary_text: "-1=unset"
               on_size:
                    self.ids._right_container.x = textfield.width
                    self.ids._right_container.width = textfield.width
               IconLeftWidget:
                    id: icon-widget
                    icon: "clock-start"
               RightWidgetTextField:
                    id: textfield
                    text: "-1"
                    halign: "center"
                    input_filter: 'int'
     
     MDBoxLayout:
          size_hint_y: 0.05
          padding: "20dp"
          MDProgressBar:
               value: 0

<RightWidgetSlider>:
     hint_bg_color: "#7F7F7F"
     hint_text_color: "#F2F2F2"

<RightWidgetTextField>:
     text_color_normal: "#595959"
     text_color_focus: "black"

<FileItem>:
     padding: "10dp"
     orientation: "vertical"
     filename: "null"
     MDIcon:
          valign: "center"
          icon: "file"
          font_size: '45dp' 
          pos_hint: {"center_x": .5, "center_y": 0.5}
     MDLabel:
          halign: "center"
          valign: "top"
          font_style: "Caption" 
          text: root.filename

<FilesPanel>:
     rows: 2
     MDBoxLayout:
          padding: "20dp"
          orientation: "vertical"
          MDLabel:
               size_hint_y: 0.05
               text: "Input Files"
               font_style: "Button"
               color: "#A5A5A5"
          MDGridLayout:
               id: input_files_grid
               rows: 4
               line_width: "1.5dp"
               line_color: "#A5A5A5"
               md_bg_color: "#CCCCCC"
     MDBoxLayout:
          padding: "20dp"
          orientation: "vertical"
          MDLabel:
               size_hint_y: 0.05
               text: "Output files"
               font_style: "Button"
               color: "#A5A5A5"
          MDGridLayout:
               id: output_files_grid
               rows: 4
               line_width: "1.5dp"
               line_color: "#A5A5A5"
               md_bg_color: "#CCCCCC"